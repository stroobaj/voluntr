{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ES2024",
    "emitDecoratorMetadata": true,
    // for NestJS dependency injection
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
      // Ensure aliases point to "src"
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
